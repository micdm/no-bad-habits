<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/f__add__title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_toLeftOf="@+id/f__add__date"
        android:hint="@string/f__add__hint"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/f__add__date"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_go_to_today"/>
    <LinearLayout
        android:id="@+id/f__add__quick_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f__add__title"
        android:orientation="horizontal"
        android:gravity="center"/>
</RelativeLayout>
